/* pages/personal/personal.wxss */
page{
  background-color: #f1f1f1;
}
.personal-wrapper {
  width: 100%;
  min-height: 200px;
}

.personal-wrapper .header {
  background-color: #139eeb;
  display: flex;
  width: 100%;
  flex-flow: row nowrap;
  justify-content: space-around;
  height: 300rpx;
  align-items: center;
}

.personal-wrapper .header .user-portrait {
  width: 150rpx;
  height: 150rpx;
  background-color: #fff;
  border-radius: 100%;
  overflow: hidden
}

.personal-wrapper .header .user-portrait  image {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
}

.personal-wrapper .header .user-info {
  width: 60%;
  color: #fff;
}
.content-list{
  width: 100%;
}
/* .content-list-item:hover{} */
.content-list-item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  margin-top:10rpx;
  padding: 0 30rpx;
  background-color: white;
  display: flex;
  color:  #444;
  font-size: 35rpx;
  letter-spacing: 2rpx;
}
.text-center{
  text-align: center;
}