/* components/book_tj/book_tj.wxss */
.recommend-item{
  width: 100%;
  height: 160rpx;
  display: flex;
  margin:20rpx 0;
  box-sizing: border-box;
}
.recommend-item-left{
  width: 120rpx;
  height: 100%;
  box-sizing: border-box;
  border: 2rpx solid #999;
}
.recommend-item-left image{
  width: 100%;
  height: 100%;
}
.recommend-item-right{
  display: flex;
  height: 100%;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  flex-direction: column;
  justify-content: space-around;
}
.recommend-item-title{
  color: #333;
  font-size: 35rpx;
  font-family: Arial, Helvetica, sans-serif;
  letter-spacing: 4rpx;
  font-weight: bold;

}
.recommend-item-author{
  color: #444;
  font-size: 25rpx;
}
.recommend-item-tip{
  color: #aaa;
  font-size: 22rpx;
}