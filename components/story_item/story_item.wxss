/* components/stoy_item/story_item.wxss */
.story-item{
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10px 10rpx 20rpx;
}
.line{
  width: 100%;
  height: 2rpx;
  background-color: #ddd;
}
.story-item .left-box{
  width: 80%;
  height: 100%;
  box-sizing: border-box;
  padding-right: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.left-box .title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  letter-spacing:2rpx;
  font-weight: 600;
}
.left-box .resource{
  color: #aaa;
  font-size: 28rpx;

}
.story-item .right-box{
  /* display: flex; */
}
.right-box image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}