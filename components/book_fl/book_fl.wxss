/* components/book_fl/book_fl.wxss */
.classify-item{
  width: 100%;
  height: 260rpx;
  display: flex;
  border-radius: 30rpx;
  background-color: rgb(248, 248, 250);
  border: #ccc 2rpx solid;
  margin: 40rpx 0;
  font-size: 32rpx;
  overflow: hidden;
}
.classify-item-left{
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  line-height: 45rpx;
}
.classify-item-left .title{
  font-size: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
}
.classify-item-left .content{
  padding-top: 20rpx;
  color: #777;
}
.classify-item-right{
  width: 30%;
  height: 100%;
  box-sizing: border-box;
  /* border-left: 2rpx solid #999; */


}
.classify-item-right image{
  width: 100%;
  height: 100%;
}