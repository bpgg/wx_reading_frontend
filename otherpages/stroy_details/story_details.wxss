/* otherpages/stroy_details/story_details.wxss */
.story-details{
  padding: 0 5%;
  background-color: white;
}
.story-details .title{
  width: 100%;
  font-size:35rpx;
  letter-spacing: 3rpx;
  font-weight: bold;
  padding: 30rpx 0;
  
}
.story-details .resource{
  color: #aaa;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.story-details .content-box{
  padding: 30rpx 0;
}
.content-box .cover-img{
  width: 100%;
  height: 350rpx;
  padding-bottom: 15rpx;
}
.cover-img image{
  width: 100%;
  height: 100%;
}
.content-box .content{
  font-size: 30rpx;
}
.content-box .paragraph{
  padding: 20rpx 0;

}
.line{
  width: 100%;
  height: 15rpx;
  background-color: #ccc;
}
.relate-content,.comment-box{
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  padding: 0 5%;
}
.relate-content .tag,.comment-box .tag{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 38rpx;
  font-weight: bold;
  position: relative;
}
.tag::after{
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: #ccc;
  content: "";
  left: 0;
  bottom: 0;
  z-index: 2;
  
}